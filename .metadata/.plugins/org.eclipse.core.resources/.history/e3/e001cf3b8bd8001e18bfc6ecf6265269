<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 다른 mapper와 중복되지 않도록 네임스페이스 기재 -->
<!-- mapper - mybatis, sqlMap - ibatis -->
<mapper namespace="product">
  	
  	<!-- 메인화면 각각 4개씩 노출 -->
	<select id="productList" resultType="com.shopping.dto.ProductDTO">
	(SELECT 
		PROD_NO,
		PROD_NAME,
		PROD_KIND,
		PRICE,
		CATE_NO,
		PROD_CONTENT,
		PROD_IMAGE,
		REGDATE 
	FROM PRODUCT
	 	WHERE PROD_KIND = 'BOTTOM' AND CATE_NO = '10' AND USEYN = 'Y' LIMIT 4)
	 	
	 	UNION ALL
	
	(SELECT 
		PROD_NO,
		PROD_NAME,
		PROD_KIND,
		PRICE,
		CATE_NO,
		PROD_CONTENT,
		PROD_IMAGE,
		REGDATE 
	FROM PRODUCT
	 	WHERE PROD_KIND = 'COAT' AND CATE_NO = '20' AND USEYN = 'Y' LIMIT 4)
	 	
	 	UNION ALL
	 	
	 (SELECT 
		PROD_NO,
		PROD_NAME,
		PROD_KIND,
		PRICE,
		CATE_NO,
		PROD_CONTENT,
		PROD_IMAGE,
		REGDATE 
	FROM PRODUCT
	 	WHERE PROD_KIND = 'ZIPUP' AND CATE_NO = '30' AND USEYN = 'Y' LIMIT 4)
	 	 	
	 	UNION ALL
	 	
	 (SELECT 
		PROD_NO,
		PROD_NAME,
		PROD_KIND,
		PRICE,
		CATE_NO,
		PROD_CONTENT,
		PROD_IMAGE,
		REGDATE 
	FROM PRODUCT
	 	WHERE PROD_KIND = 'HOOD' AND CATE_NO = '40' AND USEYN = 'Y' LIMIT 4)
	 	
	 	UNION ALL
	 	
	 (SELECT 
		PROD_NO,
		PROD_NAME,
		PROD_KIND,
		PRICE,
		CATE_NO,
		PROD_CONTENT,
		PROD_IMAGE,
		REGDATE 
	FROM PRODUCT
	 	WHERE PROD_KIND = 'MANTOMAN' AND CATE_NO = '50' AND USEYN = 'Y' LIMIT 4)
	 	
	 	UNION ALL
	 	
	 (SELECT 
		PROD_NO,
		PROD_NAME,
		PROD_KIND,
		PRICE,
		CATE_NO,
		PROD_CONTENT,
		PROD_IMAGE,
		REGDATE 
	FROM PRODUCT
	 	WHERE PROD_KIND = 'OUTER' AND CATE_NO = '60' AND USEYN = 'Y' LIMIT 4)
	</select>
	
	<!-- 전체 아이템 리스트 -->
	<select id="itemList" resultType="com.shopping.dto.ProductDTO">
	    SELECT
	        PROD_NO,
	        PROD_NAME,
	        PROD_KIND,
	        PRICE,
	        CATE_NO,
	        PROD_CONTENT,
	        PROD_IMAGE,
	        REGDATE
	    FROM PRODUCT
	    	WHERE USEYN = 'Y'
<!-- 	    AND CATE_NO = #{cate_no}   -->
	</select>
	
	<!-- 아이템 카테고리 별 분기 -->
	<select id="itemListByCategory" resultType="com.shopping.dto.ProductDTO">
	    SELECT
	        PROD_NO,
	        PROD_NAME,
	        PROD_KIND,
	        PRICE,
	        CATE_NO,
	        PROD_CONTENT,
	        PROD_IMAGE,
	        REGDATE
	    FROM PRODUCT
	    	WHERE USEYN = 'Y' AND CATE_NO = #{cate_no}  
	</select>
	
	
	<!-- 제품 상세보기 -->
	<select id="productDetail" resultType="com.shopping.dto.ProductDTO">
		SELECT
			PROD_NO,
			PROD_NAME,
			PROD_KIND,
			PRICE,
			CATE_NO,
			PROD_CONTENT,
			PROD_IMAGE,
			REGDATE
		FROM PRODUCT
			WHERE PROD_NO = #{prod_no}
	</select>
	
	<!-- 관리자 화면 모든 상품 노출  -->
	<select id="allProductList" resultType="com.shopping.dto.ProductDTO">
		SELECT
			PROD_NO,
		    PROD_NAME,
		    PROD_KIND,
			    CASE
			        WHEN PROD_KIND = 'ZIPUP' THEN '집업'
			        WHEN PROD_KIND = 'OUTER' THEN '아우터'
			        WHEN PROD_KIND = 'COAT' THEN '코트'
			        WHEN PROD_KIND = 'BOTTOM' THEN '바지'
					WHEN PROD_KIND = 'HOOD' THEN '후드'
					WHEN PROD_KIND = 'MAMTOMAN' THEN '맨투맨'
					ELSE '기타'
				END AS PROD_KIND,
		    PRICE,
		    CATE_NO,
		    PROD_CONTENT,
		    PROD_IMAGE,
		    USEYN,
		    REGDATE,
		    DELDATE
		FROM PRODUCT
			ORDER BY PROD_NO DESC;
	</select>
</mapper> 