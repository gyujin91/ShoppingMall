<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 다른 mapper와 중복되지 않도록 네임스페이스 기재 -->
<!-- mapper - mybatis, sqlMap - ibatis -->
<mapper namespace="member">
  	
  	<!-- 회원 가입 -->
  	<insert id="join">
  		INSERT INTO MEMBER
  			(MEM_ID,
  			MEM_PW,
  			MEM_NAME,
  			EMAIL,
  			PHONE,
  			USEYN,
  			CODE,
  			JOIN_DATE
  			) VALUES (
  			#{mem_id},
  			#{mem_pw},
  			#{mem_name},
  			#{email},
  			#{phone},
  			'Y',  
  			 2,			
  			DATE_FORMAT(NOW(), '%Y%m%d%H%i%s'))
  	</insert>
  	
  	<!-- 아이디 중복 체크 -->
	<select id="idCheck" resultType="int"> 
		SELECT
			COUNT(*)
		FROM MEMBER
		WHERE MEM_ID = #{mem_id}
	</select>
	
	<!-- 로그인 -->
	<select id="login" parameterType="String" resultType="map">
		SELECT
			MEM_ID,
			MEM_PW,
			MEM_NAME,
			USEYN,
			CODE,
			CASE
				WHEN CODE='1' THEN '관리자'
				WHEN CODE='2' THEN '일반회원'
				ELSE '정지된 회원'
			END AS 'CK'
		FROM MEMBER
		WHERE MEM_ID = #{mem_id}
		AND	USEYN = 'Y'
	</select>
	
	<!-- 회원 정보 상세 보기 -->
	<select id="memberRead" resultType="int">
		SELECT
			MEM_ID,
			MEM_PW, 
			MEM_NAME, 
			EMAIL, 
			PHONE
		FROM MEMBER
		WHERE MEM_ID = #{mem_id}
	</select>
	
	<!-- 회원 정보 수정 -->
	<update id="memberUpdate">
		UPDATE MEMBER SET
			MEM_PW = #{mem_pw},
			ADDR1 =	#{addr1}, 
			ADDR2 = #{addr2},
			POST = #{post},
			PHONE = #{phone} 
		WHERE MEM_ID = #{mem_id}
	</update>
	
	<!-- 결제 화면 에서 회원 정보 수정 -->
	<update id="paymentMemberUpdate">
		UPDATE MEMBER SET
			MEM_PW = #{mem_pw},
			ADDR1 =	#{addr1}, 
			ADDR2 = #{addr2},
			POST = #{post},
			PHONE = #{phone} 
		WHERE MEM_ID = #{mem_id}
	</update>
	
	<!--  회원 탈퇴 -->
	<update id="memberDelete">
	    UPDATE MEMBER SET 
	        USEYN = 'N',
	        DEL_DATE = DATE_FORMAT(NOW(), '%Y%m%d%H%i%s')
	    WHERE MEM_ID = #{mem_id}
	</update>
	
	<!-- 마이페이지 -->
	<select id="myPage" resultType="com.shopping.dto.MemberDTO">
		SELECT
			MEM_ID,
			MEM_PW, 
			MEM_NAME, 
			EMAIL, 
			PHONE,
			ADDR1,
			ADDR2,
			POST,
			CODE,
			CASE
				WHEN CODE='1' THEN '관리자'
				WHEN CODE='2' THEN '일반회원'
				ELSE '정지된 회원'
			END AS 'CK'
		FROM MEMBER
		WHERE MEM_ID = #{mem_id}
		AND	USEYN = 'Y'
	</select>
</mapper> 