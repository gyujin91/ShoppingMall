<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 다른 mapper와 중복되지 않도록 네임스페이스 기재 -->
<!-- mapper - mybatis, sqlMap - ibatis -->
<mapper namespace="order">
	<insert id="insertOrder" parameterType="com.shopping.dto.OrderDTO">	
	    INSERT INTO TRANSACTION 
		    (MEM_ID,
		    PHONE,
		    EMAIL, 
		    PROD_NO, 
		    PROD_NAME, 
		    PRICE, SIZE, 
		    QUANTITY, 
		    PROD_IMAGE, 
		    ORDER_DATE, 
		    POST, 
		    ADDR1, 
		    ADDR2,
		    DELIVERYFEE,
		    ORDER_STATE)
	    SELECT 
	        C.MEM_ID,
	        M.PHONE,
	        M.EMAIL, 
	        C.PROD_NO, 
	        P.PROD_NAME, 
	        P.PRICE, 
	        C.SIZE, 
	        C.QUANTITY, 
	        P.PROD_IMAGE, 
	        NOW(), 
	        M.POST, 
	        M.ADDR1, 
	        M.ADDR2,
	        '무료',
	        '주문 완료'
	    FROM 
	        CART C
	    JOIN 
	        PRODUCT P ON C.PROD_NO = P.PROD_NO
	    JOIN 
	        MEMBER M ON C.MEM_ID = M.MEM_ID
	    WHERE 
	        C.MEM_ID = #{mem_id}
	</insert>

	<select id="orderDetail" resultType="com.shopping.dto.OrderDTO">
	    SELECT 
	        T.ORDER_NO,
	        T.MEM_ID,
	        T.PHONE,
	        T.EMAIL,
	        T.PROD_NO,
	        T.PROD_NAME,
	        T.PROD_IMAGE,
	        T.PRICE,
	        T.QUANTITY,
	        T.SIZE,
	        T.DELIVERYFEE,
	        T.POST,
	        T.ADDR1,
	        T.ADDR2,
	        T.ORDER_DATE,
	        T.ORDER_STATE,
	        P.PAYMENT_METHOD,  
	        P.PAYMENT_DATE,   
	        P.PAYMENT_STATE  
	    FROM TRANSACTION T
	    LEFT JOIN PAYMENT P ON T.ORDER_NO = P.ORDER_NO
	    WHERE T.MEM_ID = #{memId}	    
	</select>
	
	
	
	
</mapper> 