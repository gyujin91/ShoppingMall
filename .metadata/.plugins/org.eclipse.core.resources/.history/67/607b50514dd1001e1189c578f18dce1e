	@RequestMapping("insertPayment.do")
	public String insertPayment(PaymentDTO dto, HttpSession session, Model model,
			@ModelAttribute("selectedOption") String selectedOption, @ModelAttribute("labelOption") String labelOption) throws Exception {
	    
		@SuppressWarnings("unchecked")
	    Map<String, Object> loginMap = (Map<String, Object>) session.getAttribute("loginMap");
	    
	    if(loginMap != null) {
	    	String mem_id = (String) loginMap.get("MEM_ID");
	        if(labelOption.equals("bank")) {
	            // 무통장 입금인 경우
	        	dto.setMem_id(mem_id);
	            dto.setDeposit_bank("기업 123456789 주식 대부");
	            dto.setPayment_method("무통장 입금");
	        } else if(labelOption.equals("card")) {
	            // 카드 결제 인 경우(구현 예정)
	        	dto.setMem_id(mem_id);
	            dto.setDeposit_bank(null);
	            dto.setPayment_method("카드 결제");         
	        } else {
	        	System.out.println("결제 방법이 선택되지 않았습니다.");
	        }
	        paymentService.insertPayment(dto);
	        model.addAttribute("selectedOption", selectedOption);
	        model.addAttribute("labelOption", labelOption);
	        
	        model.addAttribute("selectedOption", request.getParameter("searchType") == null ? "select" : request.getParameter("searchType"));
			model.addAttribute("labelOption", request.getParameter("searchType2") == null? "select" : request.getParameter("searchType2"));
			
			System.out.println("request.getParameter(\"selectedOption\") :: " + request.getParameter("searchType"));
			System.out.println("request.getParameter(\"labelOption\") :: " + request.getParameter("searchType2"));
	        return "redirect:/order/orderList.do";
	    } else {
	        System.out.println("로그인 하지 않은 상태");
	        return "redirect:/member/loginForm.do";
	    }
	}
	
	
}
