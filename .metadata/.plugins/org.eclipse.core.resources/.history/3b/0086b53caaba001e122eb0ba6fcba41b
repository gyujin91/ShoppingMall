<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 다른 mapper와 중복되지 않도록 네임스페이스 기재 -->
<!-- mapper - mybatis, sqlMap - ibatis -->
<mapper namespace="admin">
	
	<!-- 대쉬보드 회원 목록 불러오기 -->
	<select id="memberList" resultType="com.shopping.dto.MemberDTO">
		SELECT
			MEM_ID,
			MEM_PW, 
			MEM_NAME, 
			EMAIL, 
			PHONE
		FROM MEMBER 
		WHERE CODE = '2'	<!-- code1 : 관리자 // code2 : 일반회원 -->
		AND  LIMIT 17
	</select>
	
	<!-- 모든 회원 목록 불러오기 -->
	<select id="allMemberList" resultType="com.shopping.dto.MemberDTO">
		SELECT
			MEM_ID,
			MEM_PW, 
			MEM_NAME, 
			EMAIL, 
			PHONE, 
			USEYN, 
			JOIN_DATE, 
			DEL_DATE,
			CASE
				WHEN CODE='1' THEN '관리자'
				WHEN CODE='2' THEN '일반회원'
			ELSE '정지된 회원'
			END AS 'DEVISION'
		FROM MEMBER 
	</select>
	
	<!-- 회원 정보 상세 보기 -->
	<select id="memberRead" resultType="com.shopping.dto.MemberDTO">
		SELECT
			MEM_ID,
			MEM_PW, 
			MEM_NAME, 
			EMAIL, 
			PHONE, 
			USEYN, 
			JOIN_DATE, 
			DEL_DATE
		FROM MEMBER
		WHERE MEM_ID = #{mem_id}
	</select>
	
	<!-- 회원 정보 수정 -->
	<update id="memberUpdate">
		UPDATE MEMBER SET
			MEM_PW = #{mem_pw},
			MEM_NAME = #{mem_name},
			EMAIL = #{email},
			PHONE = #{PHONE}, 
		WHERE MEM_ID = #{mem_id}
	</update>
	
	<!--  회원 탈퇴 -->
	<update id="memberDelete">
		UPDATE MEMBER SET 
			USEYN = 'N',
			DEL_DATE = SYSDATE
		WHERE MEM_ID = #{mem_id}
	</update>
</mapper> 