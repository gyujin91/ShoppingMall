<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 다른 mapper와 중복되지 않도록 네임스페이스 기재 -->
<!-- mapper - mybatis, sqlMap - ibatis -->
<mapper namespace="cart">
  	
  	<!-- 장바구니 담기-->
  	<insert id="addToCart" parameterType="com.shopping.dto.CartDTO">
  		INSERT INTO CART
  		(			
  		MEM_ID,				<!-- 사용자 아이디(FK) -->
  		PROD_NO,			<!-- 상품 고유 번호(FK) -->
  		PROD_NAME,			<!-- 상품명 -->
  		PRICE,				<!-- 상품 가격 -->
  		SIZE,				<!-- 상품 사이즈 -->
  		QUANTITY,			<!-- 상품 수량 -->
  		PROD_IMAGE,			<!-- 상품 이미지 -->
  		CREATED_DATE		<!-- 장비구나 생성일 -->
  		) VALUES (
  		#{mem_id},
  		#{prod_no},
  		#{prod_name},
  		#{price},
  		#{size},
  		#{quantity},
  		#{prod_image},
  		DATE_FORMAT(NOW(), '%Y%m%d%H%i%s'))
  	</insert>

    <!-- 장바구니 목록 조회 -->
    <select id="cartList" resultType="com.shopping.dto.CartDTO">
        SELECT
            C.CART_ID,
            M.MEM_ID,
            P.PROD_NO,
            P.PROD_NAME,
            C.QUANTITY,
            C.SIZE,
            P.PROD_IMAGE,
            C.CREATED_DATE,
            P.PRICE,
            (P.PRICE * C.QUANTITY) AS MONEY
        FROM
            MEMBER M, PRODUCT P, CART C
        WHERE
            M.MEM_ID = C.MEM_ID
            AND P.PROD_NO = C.PROD_NO
            AND C.MEM_ID = #{mem_id}
        ORDER BY
            C.CART_ID;
    </select>
  	
  	<!-- 장바구니 상품 총 수량 -->
  	<select id="totalQuantity" resultType="Integer">
  		<![CDATA[
  		SELECT 
  			SUM(QUANTITY) AS TOTAL_QUANTITY
  		FROM CART
  		WHERE MEM_ID = #{mem_id}
		]]>
  	</select>
	
	<!-- 장바구니 합계 가격, 택배비 -->
    <select id="totalData" resultType="java.util.Map">
        <![CDATA[
        SELECT
            SUM(PRICE * QUANTITY) AS TOTAL_PRICE,
            '0' AS DELIVERYFEE,
            SUM(PRICE * QUANTITY) + 0 AS TOTAL_DATA
        FROM
            CART
        WHERE
            MEM_ID = #{mem_id};
        ]]>
    </select>
	
  	
  	<!-- 장바구니 상품 삭제 -->
	<delete id="cartDelete">
		DELETE FROM CART
		WHERE CART_ID = #{cart_id}
	</delete>
	
	<!-- 주문 화면 정보 -->
	<select id="order" resultType="com.shopping.dto.CartDTO">
		SELECT
		    M.MEM_ID,
		    M.MEM_NAME,
		    M.EMAIL,
		    M.PHONE,
		    M.POST,
		    M.ADDR1,
		    M.ADDR2,
		    P.PROD_NO,
		    P.PROD_NAME,
		    C.SIZE,
		    P.PRICE,
		    C.QUANTITY,
		    SUM(P.PRICE * C.QUANTITY) AS TOTAL_PRICE,
		    '0' AS DELIVERYFEE,
		    SUM(P.PRICE * C.QUANTITY) + 0 AS TOTAL_DATA
		FROM
		    MEMBER M
		INNER JOIN
		    CART C ON M.MEM_ID = C.MEM_ID
		INNER JOIN
		    PRODUCT P ON C.PROD_NO = P.PROD_NO
		WHERE
		    M.MEM_ID = #{mem_id}  
		GROUP BY
		    M.MEM_ID, M.EMAIL, M.PHONE, M.POST, M.ADDR1, M.ADDR2,
		    P.PROD_NO, P.PROD_NAME, C.SIZE, P.PRICE, C.QUANTITY;		
	</select>
	
	
</mapper> 