package com.shopping.dao;


import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import com.shopping.dto.OrderDTO;

@Repository
public class OrderDAOImpl implements OrderDAO {
	
	@Autowired
	SqlSession sqlSession;

	@Override
	public void insertOrder(OrderDTO dto) throws Exception {
		sqlSession.insert("order.insertOrder", dto);
	}

	@Override
	public int insertOrders(List<OrderDTO> orderDTOs) throws Exception {
	    int totalInserted = 0;
	    for (OrderDTO orderDTO : orderDTOs) {
	        totalInserted += sqlSession.insert("order.insertOrder", orderDTO);
	    }
	    return totalInserted;
	}

	@Override
	public int getGeneratedOrderNumber() throws Exception {
		return sqlSession.selectOne("getGeneratedOrderNumber");
	}

	@Override
	public List<OrderDTO> orderDetail(int order_no) throws Exception {
		return sqlSession.selectList("order.orderDetail", order_no);
	}
}
